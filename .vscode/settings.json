{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.nuxt": true,
    "**/.git": true,
    "**/.husky": true,
    "**/node_modules": true,
    "**/.npmrc": true,
    "**/.nvmrc": true,
    "**/.idea": true,
  },
  "editor.codeActionsOnSave": {
    // "source.fixAll.eslint": "explicit",
    // "source.fixAll.stylelint": "explicit"
  },
  "cSpell.words": [
    "OFCP",
    "Tecsafe"
  ],
}
